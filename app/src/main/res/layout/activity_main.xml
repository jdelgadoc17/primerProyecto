<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TiradaD4"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/ResultadoD4"
        app:layout_constraintTop_toBottomOf="@+id/TextTiradas" />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DungeonsDados"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/BotonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:text="Reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContadorTotalTiradas" />

    <TextView
        android:id="@+id/ContadorTotalTiradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo" />

    <TextView
        android:id="@+id/TextResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="36dp"
        android:text="Resultado"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonReset" />

    <TextView
        android:id="@+id/TextTiradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="224dp"
        android:text="Tiradas"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/TextResultado"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BotonD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="276dp"
        android:text="D4"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ResultadoD4"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/BotonD4"
        app:layout_constraintTop_toBottomOf="@+id/TextResultado" />

    <Button
        android:id="@+id/BotonD6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="D6"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonD4" />

    <TextView
        android:id="@+id/ResultadoD6"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/BotonD6"
        app:layout_constraintTop_toBottomOf="@+id/ResultadoD4" />

    <TextView
        android:id="@+id/TiradaD6"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/ResultadoD6"
        app:layout_constraintTop_toBottomOf="@+id/TiradaD4" />

</androidx.constraintlayout.widget.ConstraintLayout>